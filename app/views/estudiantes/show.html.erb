<%- model_class = Estudiante -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:nombre) %>:</strong></dt>
  <dd><%= @estudiante.nombre %></dd>
  <dt><strong><%= model_class.human_attribute_name(:documento) %>:</strong></dt>
  <dd><%= @estudiante.documento %></dd>
  <dt><strong><%= model_class.human_attribute_name(:email) %>:</strong></dt>
  <dd><%= @estudiante.email %></dd>
  <dt><strong><%= model_class.human_attribute_name(:tell1) %>:</strong></dt>
  <dd><%= @estudiante.tell1 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:cel) %>:</strong></dt>
  <dd><%= @estudiante.cel %></dd>
  <dt><strong><%= model_class.human_attribute_name(:fechana) %>:</strong></dt>
  <dd><%= @estudiante.fechana %></dd>
  <dt><strong><%= model_class.human_attribute_name(:direccion) %>:</strong></dt>
  <dd><%= @estudiante.direccion %></dd>
  <dt><strong><%= model_class.human_attribute_name(:nomfam) %>:</strong></dt>
  <dd><%= @estudiante.nomfam %></dd>
  <dt><strong><%= model_class.human_attribute_name(:tell2) %>:</strong></dt>
  <dd><%= @estudiante.tell2 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:grupo_id) %>:</strong></dt>
  <dd><%= @estudiante.grupo_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:tpodocumento_id) %>:</strong></dt>
  <dd><%= @estudiante.tpodocumento_id %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              estudiantes_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_estudiante_path(@estudiante), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              estudiante_path(@estudiante),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
