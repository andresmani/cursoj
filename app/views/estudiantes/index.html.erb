<%- model_class = Estudiante -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:nombre) %></th>
      <th><%= model_class.human_attribute_name(:documento) %></th>
      <th><%= model_class.human_attribute_name(:email) %></th>
      <th><%= model_class.human_attribute_name(:tell1) %></th>
      <th><%= model_class.human_attribute_name(:cel) %></th>
      <th><%= model_class.human_attribute_name(:fechana) %></th>
      <th><%= model_class.human_attribute_name(:direccion) %></th>
      <th><%= model_class.human_attribute_name(:nomfam) %></th>
      <th><%= model_class.human_attribute_name(:tell2) %></th>
      <th><%= model_class.human_attribute_name(:programa) %></th>
      <th><%= model_class.human_attribute_name(:ficha) %></th>
      <th><%= model_class.human_attribute_name(:tpodocumento_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @estudiantes.each do |estudiante| %>
      <tr>
        <td><%= link_to estudiante.id, estudiante_path(estudiante) %></td>
        <td><%= estudiante.nombre %></td>
        <td><%= estudiante.documento %></td>
        <td><%= estudiante.email %></td>
        <td><%= estudiante.tell1 %></td>
        <td><%= estudiante.cel %></td>
        <td><%= estudiante.fechana %></td>
        <td><%= estudiante.direccion %></td>
        <td><%= estudiante.nomfam %></td>
        <td><%= estudiante.tell2 %></td>
        <td><%= estudiante.grupo.programa.nombre %></td>
        <td><%= estudiante.grupo.ficha %></td>
        <td><%= estudiante.tpodocumento.nombre %></td>
        <td><%=l estudiante.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_estudiante_path(estudiante), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      estudiante_path(estudiante),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_estudiante_path,
            :class => 'btn btn-primary' %>
